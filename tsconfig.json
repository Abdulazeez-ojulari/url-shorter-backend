{
  "exclude": [
      "**/*.spec.ts"
  ],
  "compilerOptions": {
    "target": "es6",  
    "module": "commonjs",
    "lib": ["es6", "dom"], 
    "allowJs": true,
    "outDir": "./dist",
    "rootDir": "./",
    "strict": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "types": ["jest"],
    "baseUrl": ".",
    "paths": {
      "*": ["node_modules/*", "src/types/*"]
    }
  },
  "include": ["./src/**/*", "./app.ts", "tests/**/*.test.ts"]
}
